<% include ./partials/dashboardnavbar %>
<form action='/entries/add' method="POST">
    <div class="form-group">
      <label for="exampleFormControlInput1">Title</label>
      <input type="text" name="title" class="form-control" id="exampleFormControlInput1" placeholder="Enter title" required>
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Diary</label>
      <textarea class="form-control" name="entry" placeholder="What all happened today?" id="exampleFormControlTextarea1" rows="5" required></textarea>
    </div>   
    <label class="form-check-label">
      <input type="checkbox" class="form-check-input" value="">Make it public
    </label>
    <br>
    <br>
    <button type="submit" class="btn btn-primary">Add diary</button>
  </form>
